@model SalesMVC.Models.Seller

@{
    ViewData["Title"] = "Detalhes";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Vendedor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nome:</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <dt>E-Mail:</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>
        <dt>Data de nascimento:</dt>
        <dd>@Html.DisplayFor(model => model.Birthdate)</dd>
        <dt>Salário-Base</dt>
        <dd>@Html.DisplayFor(model => model.BaseSalary)</dd>
        <dt>Departamento:</dt>
        <dd>@Html.DisplayFor(model => model.Department.Name)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Alterar</a>
    <a asp-action="Index">Voltar à lista</a>
</div>

